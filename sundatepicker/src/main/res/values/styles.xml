<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.MinWidth">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@color/item_text_color</item>
    </style>

    <style name="DarkDialogTheme" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="colorPrimary">#ff8a80</item>
        <item name="colorPrimaryDark">#ca6e66</item>
        <item name="android:background">#424242</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/item_text_color_dark</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:paddingTop">@dimen/dialog_padding</item>
        <item name="android:paddingLeft">@dimen/dialog_padding</item>
        <item name="android:paddingRight">@dimen/dialog_padding</item>
        <item name="android:paddingBottom">@dimen/dialog_padding</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>
